{
  "name": "ersen-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "cli",
    "packages/*"
  ],
  "overrides": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-grid-layout": "^1.3.2"
  },
  "scripts": {
    "dev:frontend": "bun run dev -w frontend",
    "dev:backend": "bun run dev -w backend",
    "dev": "bun run --parallel dev:backend dev:frontend",
    "build:backend": "bun run build -w ersen-backend",
    "start:backend": "bun run start -w ersen-backend",
    "build:frontend": "bun run build -w ersen-frontend",
    "start:frontend": "bun run start -w ersen-frontend"
  }
}